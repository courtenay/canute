<h1>Editing rule</h1>

<% form_for(@rule) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :rule_template_id %><br />
    <%= f.select :rule_template_id, RuleTemplate.all.map { |rt| [rt.name, rt.id] } %>
  </p>

  <%= f.hidden_field :rule_template_id %>
  <%= f.error_messages %>

  <h2><%= f.object.rule_template.name %></h2>
  <table>
  <tr>
    <td><%= f.label :field %></td>
    <td><%= f.label :operator %></td>
    <td><%= f.label :value %></td>
  </tr>
  <tr>
    <td><%= f.select :field, f.object.rule_template.fields %></td>
    <td><%= f.select :operator, Rule.operators[f.object.rule_template.match_type] %></td>
    <td><%= f.text_field :value %></td>
  </tr>
  </table>
  <p>Help on values:<br />
    For dates: try "1 week ago", "2 days ago", "2008-12-24"
  </p>  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @rule %> |
<%= link_to 'Back', rules_path %>